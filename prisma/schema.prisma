datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // подключение к базе данных Supabase
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String
  name       String
  role       String   @default("user")
  avatar_url String? // ссылка на аватар
  created_at DateTime @default(now())

  // Связи
  projects Project[]
  skills   Skill[]
  posts    BlogPost[]
  comments Comment[]
  Token    Token[]
}

model Token {
  id         String   @id @default(uuid())
  token      String
  expires_at DateTime
  user       User     @relation(fields: [userId], references: [id])
  userId     String
}

model Project {
  id          String   @id @default(uuid())
  title       String
  description String
  url         String
  image_url   String? // ссылка на изображение проекта
  created_at  DateTime @default(now())

  // Связи
  user   User   @relation(fields: [userId], references: [id])
  userId String
}

model Skill {
  id         String   @id @default(uuid())
  name       String
  created_at DateTime @default(now())

  // Связи
  user   User   @relation(fields: [userId], references: [id])
  userId String
}

model BlogPost {
  id           String    @id @default(uuid())
  title        String
  content      String // Маркдаун контент статьи
  status       String    @default("draft")
  published_at DateTime?

  // Связи
  author   User      @relation(fields: [authorId], references: [id])
  authorId String
  comments Comment[]
}

model Comment {
  id         String   @id @default(uuid())
  content    String
  created_at DateTime @default(now())

  // Связи
  post   BlogPost @relation(fields: [postId], references: [id])
  postId String
  user   User     @relation(fields: [userId], references: [id])
  userId String
}
